<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="20dp"
            android:text="Residency : "/>
        <TextView android:id="@+id/Residency"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Residency"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="Morning Delivery time : "/>

        <TextView android:id="@+id/morDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Delivery Time"
            android:textSize="15dp"

            android:layout_marginLeft="5dp"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="Morning Prasadam Feedback : "/>
        <TextView android:id="@+id/morFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Feedback"
            android:textSize="15dp"


            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="Evening Delivery time : "/>
        <TextView android:id="@+id/eveDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evening Delivery Time"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"



           />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="Evening Prasadam Feedback : "/>
        <TextView android:id="@+id/eveFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evening Feedback"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
           />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/menu_card"
        android:layout_gravity="center"
        android:onClick="navigateMenu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/selector"
        card_view:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/menu_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="50dp"
            android:text="Menu"
            android:gravity="center"
            android:background="@color/fui_buttonShadow"

            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/feedback_Card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="navigateFeedback"
        card_view:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/feedback_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="50dp"
            android:text="Feedback"
            android:gravity="center"
            android:background="@color/fui_buttonShadow"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/admin_Card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="navigateAdmin"

        card_view:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/admin_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="50dp"
            android:text="Admin"
            android:gravity="center"
            android:background="@color/fui_buttonShadow"
            />
    </android.support.v7.widget.CardView>
